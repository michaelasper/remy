# SQLite database path used inside Docker/Compose environments
REMY_DATABASE_PATH=/app/data/remy.db

# Optional Home Assistant integration settings
REMY_HOME_ASSISTANT_BASE_URL=
REMY_HOME_ASSISTANT_TOKEN=

# Optional API token for securing write endpoints (use with Authorization: Bearer ...)
REMY_API_TOKEN=

# Logging level (DEBUG, INFO, WARNING, ERROR)
REMY_LOG_LEVEL=DEBUG
